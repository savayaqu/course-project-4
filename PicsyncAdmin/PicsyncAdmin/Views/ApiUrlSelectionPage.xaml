<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PicsyncAdmin.ViewModels"
             x:Class="PicsyncAdmin.Views.ApiUrlSelectionPage"
             Title="Выбор API URL">
    <ContentPage.BindingContext>
        <vm:ApiUrlSelectionViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        
        <!-- Кнопка для выбора URL -->
        <Button Text="Добавить URL" Command="{Binding SaveApiUrlCommand}" />
        <Button Text="Выбрать URL" Command="{Binding ShowApiUrlSelectionCommand}" />
    </StackLayout>
</ContentPage>
