<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pinch="clr-namespace:Xamarin.Forms.PinchZoomImage"
             x:Class="PicsyncAdmin.Views.FullScreenImagePage"
             xmlns:vm="clr-namespace:PicsyncAdmin.ViewModels"
             Title="FullScreenImagePage"
             Background="Black">
    <ContentPage.Content>
        <Grid>
            <!-- Картинка с возможностью масштабирования -->
            <pinch:PinchZoom>
                <pinch:PinchZoom.Content>
                    <Image Source="{Binding Picture.OriginalPath}"/>
                </pinch:PinchZoom.Content>
            </pinch:PinchZoom>

            <!-- Шапка с кнопками -->
            <Grid x:Name="Header" BackgroundColor="#66000000" Padding="10" IsVisible="True" Opacity="1" HeightRequest="65" VerticalOptions="Start">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Text="Назад"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Command="{Binding CloseCommand}" />

                <!-- Кнопка удаления -->
                <Button Text="Удалить"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Command="{Binding DeleteImageCommand}"
                        CommandParameter="{Binding Picture}"
                        Grid.Column="2" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
