<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PicsyncAdmin.Views.Home"
             Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <StackLayout Orientation="Horizontal" Padding="10, 20" Grid.Row="0" BackgroundColor="#f0f0f0">
            <Label Text="{Binding UserName}"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="StartAndExpand" />
            <Button Text="Logout"
                    Command="{Binding LogoutCommand}"
                    HorizontalOptions="End"
                    BackgroundColor="Red"
                    TextColor="White"
                    Padding="10,5" />
        </StackLayout>

        <!-- Список жалоб -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Complaints}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10" BorderColor="#cccccc">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding CreatedAt, StringFormat='Дата: {0:dd.MM.yyyy}'}" FontSize="12" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
