<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PicsyncAdmin.Views.Home"
             Title="Home">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Шапка -->
            <RowDefinition Height="Auto" />
            <!-- Приветствие -->
            <RowDefinition Height="Auto" />
            <!-- Заголовок списка жалоб -->
            <RowDefinition Height="*" />
            <!-- Список жалоб -->
        </Grid.RowDefinitions>

        <ProgressBar 
            Progress="{Binding UsedPercent}" 
            HorizontalOptions="FillAndExpand"
            HeightRequest="10" />
        <Label Text="{Binding UploadDisablePercentage}"/>
        <!-- Заголовок -->
        <Label Grid.Row="2"
               Text="Нерассмотренные жалобы"
               HorizontalOptions="Center"
               FontSize="20"
               Padding="20" />

        <!-- Список жалоб -->
        <CollectionView Grid.Row="3" ItemsSource="{Binding Complaints}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="5">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="2*,3*">
                            <!-- Текстовая информация в столбцах -->
                            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Vertical" Spacing="5">
                                <Label Text="От кого:" FontAttributes="Bold" />
                                <Label Text="{Binding FromUser.Name}" />
                                <Label Text="На кого:" FontAttributes="Bold" Margin="0,10,0,0" />
                                <Label Text="{Binding AboutUser.Name}" />
                                <Label Text="Тип:" FontAttributes="Bold" Margin="0,10,0,0" />
                                <Label Text="{Binding Type}" />
                                <Label Text="Статус:" FontAttributes="Bold" Margin="0,10,0,0" />
                                <Label Text="{Binding StatusDescription}" />
                                <Label Text="Альбом:" FontAttributes="Bold" Margin="0,10,0,0" />
                                <Label Text="{Binding Album.Name}" />
                            </StackLayout>

                            <!-- Картинка -->
                            <Image Source="{Binding Picture.Path}" 
                                   Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                   HeightRequest="120" Aspect="AspectFit" 
                                   HorizontalOptions="End" VerticalOptions="Center" Margin="10,0" />
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                   FormattedText=""
                                    Text="{Binding Description, StringFormat='Комментарий: {0}'}" 
                                    FontAttributes="Italic" TextColor="Gray" 
                                    Margin="0,10,0,0" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
