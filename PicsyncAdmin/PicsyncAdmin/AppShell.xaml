<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PicsyncAdmin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PicsyncAdmin"
    Shell.FlyoutBehavior="Disabled"
    Title="PicsyncAdmin">

    <!-- Указываем страницу входа Views.Auth.Login как главную -->
    <ShellContent
        Title="Авторизация"
        ContentTemplate="{DataTemplate local:Views.Auth.Login}"
        Route="LoginPage" />
    <TabBar>
        <Tab Title="Главная" Icon="house.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Views.Home}" Route="MainPage"/>
        </Tab>
        <Tab Title="Профиль" Icon="user.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Views.Profile}" Route="Profile"/>
        </Tab>
        <Tab Title="Тема" Icon="theme.svg" />

    </TabBar>
</Shell>
