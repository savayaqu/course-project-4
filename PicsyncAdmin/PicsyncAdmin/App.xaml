<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PicsyncAdmin"
             xmlns:converters="clr-namespace:PicsyncAdmin.Converters"
             x:Class="PicsyncAdmin.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <converters:StatusIsNullConverter x:Key="StatusIsNullConverter"/>
            <Color x:Key="BackgroundColorLight">#FFFFFF</Color>
            <Color x:Key="TextColorLight">#000000</Color>
            <Color x:Key="ButtonBackgroundColorLight">#808080</Color>
            <Color x:Key="BackgroundColorDark">#000000</Color>
            <Color x:Key="TextColorDark">#FFFFFF</Color>
            <Color x:Key="ButtonBackgroundColorDark">#A9A9A9</Color>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
